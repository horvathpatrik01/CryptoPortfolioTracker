<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoPortfolioTracker.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">
    <Grid RowDefinitions="1*,8*,1*">
        <Frame Padding="0" WidthRequest="250" 
               Grid.Row="0"
               BackgroundColor="LightBlue"
               CornerRadius="125"
               
               Margin="0,-80,-80,0"
               HeightRequest="250" HorizontalOptions="EndAndExpand">

        </Frame>
        <Frame Padding="0" WidthRequest="250" 
               Grid.Row="0"
               BackgroundColor="LightBlue"
               CornerRadius="125"
               Margin="0,-120,-120,0"
               HeightRequest="250" HorizontalOptions="EndAndExpand">

        </Frame>

        <Frame Grid.Row="1" VerticalOptions="CenterAndExpand" BackgroundColor="AliceBlue"
               Margin="0,0,40,0">
            
        </Frame>
        <Frame Padding="0" WidthRequest="250" 
               Grid.Row="2"
               VerticalOptions="EndAndExpand"
               BackgroundColor="LightBlue"
               CornerRadius="125"
               Margin="0,0,0,-180"
               HeightRequest="250" HorizontalOptions="StartAndExpand">

        </Frame>
        <Frame Padding="0" WidthRequest="250" 
               Grid.Row="2"
               VerticalOptions="EndAndExpand"
               BackgroundColor="LightBlue"
               CornerRadius="125"
               Margin="0,0,0,-200"
               HeightRequest="250" HorizontalOptions="StartAndExpand">    

        </Frame>
    </Grid>
</ContentPage>