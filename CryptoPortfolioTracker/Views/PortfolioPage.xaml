<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CryptoPortfolioTracker.Views.PortfolioPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:model="clr-namespace:Shared;assembly=Shared"
    xmlns:templates="clr-namespace:CryptoPortfolioTracker.Views.Templates"
    xmlns:viewmodels="clr-namespace:CryptoPortfolioTracker.ViewModels"
    Title="PortfolioPage"
    x:DataType="viewmodels:PortfolioViewModel"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <Grid ColumnDefinitions="1*" RowDefinitions="60,1*">

        <Grid
            Grid.Row="0"
            ColumnDefinitions="Auto,1*"
            VerticalOptions="StartAndExpand">
            <Label
                Grid.Column="0"
                Padding="20"
                BackgroundColor="Transparent"
                FontAttributes="Bold"
                FontSize="30"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="Center">
                Portfolio Tracker
            </Label>

            <HorizontalStackLayout
                Grid.Column="1"
                HorizontalOptions="End"
                Spacing="0">
                <Label
                    Margin="0,10,0,10"
                    Padding="8,0,8,0"
                    BackgroundColor="Transparent"
                    FontAttributes="None"
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    Text="{mi:Material Icon=AccountBox}"
                    TextColor="Black"
                    VerticalTextAlignment="Center">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="TextColor" Value="{x:StaticResource Primary}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Label>

                <Label
                    Margin="0,10,0,10"
                    Padding="8,0,8,0"
                    BackgroundColor="Transparent"
                    FontAttributes="None"
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    Text="{mi:Material Icon=Settings}"
                    TextColor="Black"
                    VerticalTextAlignment="Center">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="TextColor" Value="{x:StaticResource Primary}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Label>

                <Label
                    Margin="0,10,0,10"
                    Padding="8,0,8,0"
                    BackgroundColor="Transparent"
                    FontAttributes="None"
                    FontSize="16"
                    HorizontalTextAlignment="Center"
                    Text="{mi:Material Icon=Contrast}"
                    TextColor="Black"
                    VerticalTextAlignment="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChangeThemeCommand}" />
                    </Label.GestureRecognizers>

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="TextColor" Value="{x:StaticResource Primary}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Label>
            </HorizontalStackLayout>
        </Grid>

        <Grid
            Grid.Row="1"
            Margin="0"
            Padding="0"
            ColumnDefinitions="1*,4*"
            RowDefinitions="auto,1*"
            VerticalOptions="Fill">

            <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                <Grid
                    Grid.Row="0"
                    Padding="18"
                    ColumnDefinitions="Auto,Auto,1*"
                    HorizontalOptions="Fill">
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        Text="My portfolios " />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        Text="{Binding Portfolios.Count, StringFormat=' ({0:D})'}" />
                    <Label
                        x:Name="editButton"
                        Grid.Column="2"
                        Margin="0,0,10,0"
                        FontSize="20"
                        HorizontalOptions="End"
                        Text="{mi:Material Icon=Edit}"
                        VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleEditCommand}" />
                        </Label.GestureRecognizers>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                                        </VisualState.Setters>
                                    </VisualState>

                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="TextColor" Value="{x:StaticResource Primary}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                    </Label>
                </Grid>

                <ScrollView>
                    <VerticalStackLayout Padding="10">

                        <!--  Portfolio list  -->
                        <CollectionView
                            x:Name="PortfolioCollectionView"
                            ItemsLayout="VerticalList"
                            ItemsSource="{Binding Portfolios, Mode=TwoWay}"
                            SelectedItem="{Binding SelectedPortfolio, Mode=TwoWay}"
                            SelectionChangedCommand="{Binding GetPortfolioCommand}"
                            SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}"
                            SelectionMode="Single">

                            <CollectionView.EmptyView>
                                <StackLayout Padding="10" Orientation="Vertical">
                                    <Image
                                        Margin="10"
                                        HeightRequest="50"
                                        HorizontalOptions="Center"
                                        Source="nodata.png"
                                        VerticalOptions="Center"
                                        WidthRequest="50" />
                                    <Label Text="Add your first portfolio to your account!" />
                                </StackLayout>
                            </CollectionView.EmptyView>

                            <!--  Portfolio template  -->
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:PortfolioDto">
                                    <templates:PortfolioItem />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!--  Create new portfolio button  -->

                        <Label
                            Padding="18"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="+ Create portfolio">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CreatePortfolioCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </VerticalStackLayout>
                </ScrollView>
            </VerticalStackLayout>

            <ScrollView
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,0,0"
                Padding="0">
                <Grid
                    ColumnDefinitions="1*"
                    HorizontalOptions="Fill"
                    RowDefinitions="Auto,1*"
                    VerticalOptions="Fill">
                    <Grid
                        Grid.Row="0"
                        ColumnDefinitions="1*,1*"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill">
                        <VerticalStackLayout
                            Grid.Column="0"
                            Padding="10"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="Start">
                            <Label FontSize="15">Total value</Label>
                            <Label FontAttributes="Bold" FontSize="25">$214832.12</Label>
                            <Label FontSize="15" TextColor="Green">+ $14.11 +3.06% (24ó)</Label>
                        </VerticalStackLayout>
                        <VerticalStackLayout
                            Grid.Column="1"
                            Padding="10"
                            HorizontalOptions="End"
                            VerticalOptions="Start">
                            <Button
                                Margin="10,0,10,0"
                                Padding="10,0,10,0"
                                Command="{Binding CreatePortfolioCommand}"
                                Text="+Create Portfolio" />
                        </VerticalStackLayout>
                    </Grid>
                    <VerticalStackLayout Grid.Row="1" Padding="10">
                        <Label Margin="10,0,10,0" FontSize="18">Holdings</Label>
                        <VerticalStackLayout
                            Margin="10"
                            HorizontalOptions="Fill"
                            Spacing="8">
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BackgroundColor="Transparent"
                                HeightRequest="50">
                                <Label Margin="10,0,0,0" VerticalTextAlignment="Center">Asset 1</Label>
                            </Frame>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Grid>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>