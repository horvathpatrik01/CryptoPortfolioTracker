<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CryptoPortfolioTracker.Views.PortfolioPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    xmlns:model="clr-namespace:Shared;assembly=Shared"
    xmlns:templates="clr-namespace:CryptoPortfolioTracker.Views.Templates"
    xmlns:viewmodels="clr-namespace:CryptoPortfolioTracker.ViewModels"
    Title="PortfolioPage"
    x:DataType="viewmodels:PortfolioViewModel"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">
    <Grid RowDefinitions="Auto,1*">

        <!--  Header  -->
        <templates:Header Grid.Row="0" />

        <Grid
            Grid.Row="1"
            ColumnDefinitions="1*,4*"
            RowDefinitions="auto,1*"
            VerticalOptions="Fill">

            <!--  Left column with portfolio list  -->
            <VerticalStackLayout
                Grid.Row="1"
                Grid.Column="0"
                Padding="20"
                Spacing="15">

                <Grid
                    Grid.Row="0"
                    ColumnDefinitions="Auto,1*"
                    HorizontalOptions="Fill">

                    <!--  "My portfolios" label with counter  -->
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="{Binding Portfolios.Count, StringFormat='My portfolios ({0:D})'}" />

                    <!--  Edit button  -->
                    <Label
                        Grid.Column="1"
                        HorizontalOptions="End"
                        Style="{x:StaticResource LabelButton}"
                        Text="{mi:Material Icon=Edit,
                                           IconSize=20}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleEditCommand}" />
                        </Label.GestureRecognizers>
                    </Label>

                </Grid>

                <!--  Portfolio list  -->
                <ScrollView>
                    <VerticalStackLayout Spacing="10">

                        <CollectionView
                            x:Name="PortfolioCollectionView"
                            ItemsLayout="VerticalList"
                            ItemsSource="{Binding Portfolios, Mode=TwoWay}"
                            SelectedItem="{Binding SelectedPortfolio, Mode=TwoWay}"
                            SelectionChangedCommand="{Binding GetPortfolioCommand}"
                            SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}"
                            SelectionMode="Single">

                            <!--  Element if empty  -->
                            <CollectionView.EmptyView>
                                <StackLayout
                                    Padding="10"
                                    Orientation="Horizontal"
                                    Spacing="10">
                                    <Image
                                        HeightRequest="50"
                                        HorizontalOptions="Center"
                                        Source="nodata.png"
                                        VerticalOptions="Center"
                                        WidthRequest="50" />
                                    <Label
                                        HorizontalOptions="Center"
                                        Text="Add your first portfolio!"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </CollectionView.EmptyView>

                            <!--  Portfolio template  -->
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:PortfolioDto">
                                    <templates:PortfolioItem />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!--  Create new portfolio button  -->

                        <Label
                           
                            FontAttributes="Bold"
                            FontSize="14"
                            HorizontalOptions="Start"
                            Style="{x:StaticResource LabelButton}"
                            Text="+ Create portfolio">

                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CreatePortfolioCommand}" />
                            </Label.GestureRecognizers>
                        </Label>

                    </VerticalStackLayout>
                </ScrollView>
            </VerticalStackLayout>

            <!--  Content  -->
            <ScrollView Grid.Row="1" Grid.Column="1">
                <Grid
                    ColumnDefinitions="1*"
                    HorizontalOptions="Fill"
                    RowDefinitions="Auto,Auto,1*"
                    VerticalOptions="Fill">

                    <Grid
                        Grid.Row="0"
                        Margin="20"
                        ColumnDefinitions="Auto,1*"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill">

                        <VerticalStackLayout
                            Grid.Column="0"
                            HorizontalOptions="StartAndExpand"
                            Spacing="5"
                            VerticalOptions="Start">
                            <HorizontalStackLayout Spacing="10">
                                <!--  Portfolio icon  -->
                                <Image
                                    HeightRequest="20"
                                    Source="{Binding SelectedPortfolio.Icon}"
                                    WidthRequest="20" />
                                <!--  Portfolio name  -->
                                <Label FontSize="18" Text="{Binding SelectedPortfolio.Name}" />
                            </HorizontalStackLayout>
                            <!--  Portfolio value  -->
                            <Label FontAttributes="Bold" FontSize="32">$214832.12</Label>
                            <!--  Value changing  -->
                            <Label FontSize="18" TextColor="Green">+ $14.11 +3.06% (24ó)</Label>
                        </VerticalStackLayout>

                        <!--  Create portfolio  -->
                        <Button
                            HeightRequest="32"
                            Grid.Column="1"
                            Padding="10,0,10,0"
                            Command="{Binding CreatePortfolioCommand}"
                            HorizontalOptions="End"
                            Text="+ Create Portfolio"
                            VerticalOptions="Start" />

                    </Grid>

                    <!--  Holding asset list  -->
                    <VerticalStackLayout Grid.Row="2" Margin="20">
                        <Label FontAttributes="Bold" FontSize="18">Holdings</Label>
                        <BoxView Margin="0,10,0,20" Style="{x:StaticResource Separator}" />
                        <Grid
                            Padding="10,0,10,0"
                            ColumnDefinitions="4*,3*,1*,1*,1*,1*,2*,2*"
                            ColumnSpacing="20">
                            <Label
                                Grid.Column="0"
                                FontAttributes="Bold"
                                Text="Asset" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                Text="Portfolio allocation" />
                            <Label
                                Grid.Column="2"
                                FontAttributes="Bold"
                                HorizontalOptions="End"
                                Text="Price" />
                            <Label
                                Grid.Column="3"
                                FontAttributes="Bold"
                                HorizontalOptions="End"
                                Text="1h%" />
                            <Label
                                Grid.Column="4"
                                FontAttributes="Bold"
                                HorizontalOptions="End"
                                Text="24h%" />
                            <Label
                                Grid.Column="5"
                                FontAttributes="Bold"
                                HorizontalOptions="End"
                                Text="7d%" />
                            <Label
                                Grid.Column="6"
                                FontAttributes="Bold"
                                HorizontalOptions="End"
                                Text="Balance" />
                            <Label
                                Grid.Column="7"
                                FontAttributes="Bold"
                                HorizontalOptions="End"
                                Text="Value" />
                        </Grid>
                        <BoxView Margin="0,20,0,20" Style="{x:StaticResource Separator}" />

                        <CollectionView
                            x:Name="PortfolioAssetView"
                            ItemsLayout="VerticalList"
                            SelectionMode="Single">

                            <!--  Element if empty  -->
                            <CollectionView.EmptyView>
                                <Label
                                    Padding="10"
                                    HorizontalOptions="Start"
                                    Text="No assets yet!"
                                    VerticalOptions="Center" />
                            </CollectionView.EmptyView>

                            <!--  Portfolio template  -->
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:AssetDto">
                                    <templates:AssetItem />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>


                    </VerticalStackLayout>
                </Grid>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>
